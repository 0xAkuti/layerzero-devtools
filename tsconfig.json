{
  "compilerOptions": {
    "target": "esnext",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",   
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,   
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["ES2015"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src"]
}